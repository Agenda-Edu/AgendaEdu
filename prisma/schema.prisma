generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String    @unique
  tipo      Role
  student   Student[]
  cpf       String    @unique
  telefone1 String
  telefone2 String?
  telefone3 String?
  brithDay  DateTime
  adress    Adress?

  @@index([id])
}

model Adress {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  logradouro  String
  complemento String
  numero      Int
  cep         String
  userId      String @unique @db.ObjectId

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  student
  guardian
  teacher
  admin
}

model Student {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  cpf         String?  @unique
  class       String
  turn        String
  //brithDay    DateTime
  userId      String   @db.ObjectId

  user User @relation(fields: [userId], references: [id])
}
